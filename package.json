{
  "version": "1.2.0",
  "scripts": {
    "build": "./bin/prep-dist.sh && webpack",
    "lint": "eslint ./*.js \"{bin,src}/**/*.{js,svelte}\"",
    "start": "NODE_EXTRA_CA_CERTS=\"./certs.localhost/localhost.crt\" node ./dist/server",
    "start:dev": "./bin/prep-dist.sh && webpack & NODE_EXTRA_CA_CERTS=\"./certs.localhost/localhost.crt\" ./watcher.js \"./bin/prep-dist.sh\" \"./dist/public/manifest.json\"",
    "release": "./bin/release.js",
    "release:dryrun": "./bin/release.js -dr",
    "release:update": "sh -c \"$(curl -fsSL https://raw.githubusercontent.com/the0neWhoKnocks/release-script/master/js/tools/install.sh) --update --install-dir \\\"bin\\\"\""
  },
  "dependencies": {
    "anylogger": "1.0.11",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "dompurify": "2.3.0",
    "fast-glob": "3.2.7",
    "marked": "4.0.8",
    "mkdirp": "1.0.4",
    "prismjs": "1.24.1",
    "sirv": "1.0.12",
    "ulog": "2.0.0-beta.18"
  },
  "devDependencies": {
    "browser-sync": "2.27.5",
    "chokidar": "3.5.1",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "5.2.0",
    "css-minimizer-webpack-plugin": "1.3.0",
    "eslint": "8.5.0",
    "eslint-plugin-cypress": "2.11.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-svelte3": "3.2.1",
    "ignore-emit-webpack-plugin": "2.0.6",
    "mini-css-extract-plugin": "1.4.1",
    "nodemon": "2.0.7",
    "svelte": "3.37.0",
    "svelte-loader": "3.1.0",
    "terser-webpack-plugin": "5.1.1",
    "webpack": "5.31.0",
    "webpack-cli": "4.6.0",
    "webpack-manifest-plugin": "3.1.1"
  }
